{
  "name": "test-quire",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn run start:prod || yarn run start:dev",
    "start:prod": "node ./bin/www",
    "start:dev": "concurrently --kill-others-on-fail \"node ./bin/www\" \"yarn run client\"",
    "client": "cd client && yarn run start",
    "install": "cd client && yarn install",
    "build": "cd client && yarn run build",
    "heroku-postbuild": "yarn run build",
    "cypress:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:record": "cypress run --record",
    "test": "run-p --race start cy:run",
    "test:ci": "run-p --race start cy:run:record"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "mongoose": "^5.3.13",
    "morgan": "~1.9.0",
    "yarn": "^1.12.3"
  },
  "devDependencies": {
    "cypress": "^3.1.2",
    "npm-run-all": "^4.1.3"
  }
}
